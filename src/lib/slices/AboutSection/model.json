{
  "id": "about_section",
  "type": "SharedSlice",
  "name": "AboutSection",
  "description": "About section with image and text content",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Title",
            "placeholder": "About Us"
          }
        },
        "subtitle": {
          "type": "Text",
          "config": {
            "label": "Subtitle",
            "placeholder": "Your journey to healing and growth starts here"
          }
        },
        "content": {
          "type": "StructuredText",
          "config": {
            "label": "Content",
            "placeholder": "Share your story and mission...",
            "allowTargetBlank": true,
            "multi": "paragraph,preformatted,heading1,heading2,heading3,strong,em,hyperlink,embed,list-item"
          }
        },
        "image": {
          "type": "Image",
          "config": {
            "label": "Professional Image",
            "constraint": {},
            "thumbnails": []
          }
        },
        "professional_badge_text": {
          "type": "Text",
          "config": {
            "label": "Professional Badge Text",
            "placeholder": "Licensed Professional"
          }
        },
        "credentials_section_title": {
          "type": "Text",
          "config": {
            "label": "Credentials Section Title",
            "placeholder": "Why Choose Our Practice"
          }
        },
        "stats_section_title": {
          "type": "Text",
          "config": {
            "label": "Statistics Section Title",
            "placeholder": "Our Impact"
          }
        },
        "years_experience": {
          "type": "Number",
          "config": {
            "label": "Years of Experience",
            "placeholder": "15"
          }
        },
        "clients_helped": {
          "type": "Number",
          "config": {
            "label": "Clients Helped",
            "placeholder": "500"
          }
        },
        "satisfaction_rate": {
          "type": "Number",
          "config": {
            "label": "Client Satisfaction Rate (%)",
            "placeholder": "98"
          }
        },
        "cta_button_text": {
          "type": "Text",
          "config": {
            "label": "Call to Action Button Text",
            "placeholder": "Start Your Journey Today"
          }
        },
        "cta_button_link": {
          "type": "Link",
          "config": {
            "label": "Call to Action Button Link",
            "placeholder": "",
            "select": null,
            "allowTargetBlank": false,
            "allowText": false,
            "repeat": false
          }
        }
      },
      "items": {
        "credential_title": {
          "type": "Text",
          "config": {
            "label": "Credential Title",
            "placeholder": "Licensed Professionals"
          }
        },
        "credential_description": {
          "type": "Text",
          "config": {
            "label": "Credential Description",
            "placeholder": "Board-certified therapists with extensive training"
          }
        },
        "credential_icon": {
          "type": "Select",
          "config": {
            "label": "Credential Icon",
            "options": [
              "certificate",
              "heart",
              "shield",
              "brain",
              "support"
            ]
          }
        },
        "credential_color": {
          "type": "Select",
          "config": {
            "label": "Credential Color Theme",
            "options": [
              "primary",
              "sage",
              "lavender",
              "secondary"
            ]
          }
        }
      }
    }
  ]
}
