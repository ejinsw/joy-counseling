{
  "id": "testimonials",
  "type": "SharedSlice",
  "name": "Testimonials",
  "description": "Client testimonials and reviews with customizable styling and layout",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Title",
            "placeholder": "What Our Clients Say"
          }
        },
        "subtitle": {
          "type": "Text",
          "config": {
            "label": "Subtitle",
            "placeholder": "Real stories from real people"
          }
        }
      },
      "items": {
        "client_name": {
          "type": "Text",
          "config": {
            "label": "Client Name",
            "placeholder": "Sarah Johnson"
          }
        },
        "client_photo": {
          "type": "Image",
          "config": {
            "label": "Client Photo",
            "constraint": {},
            "thumbnails": []
          }
        },
        "rating": {
          "type": "Select",
          "config": {
            "label": "Star Rating",
            "options": [
              "5",
              "4",
              "3",
              "2",
              "1"
            ]
          }
        },
        "testimonial_text": {
          "type": "StructuredText",
          "config": {
            "label": "Testimonial Text",
            "placeholder": "Share what the client said about their experience",
            "allowTargetBlank": true,
            "multi": "paragraph,preformatted,heading1,heading2,heading3,strong,em,hyperlink,embed,list-item"
          }
        },
        "service_received": {
          "type": "Text",
          "config": {
            "label": "Service Received",
            "placeholder": "Individual Therapy"
          }
        },
        "session_date": {
          "type": "Date",
          "config": {
            "label": "Session Date",
            "placeholder": "When this testimonial was given"
          }
        },
        "featured": {
          "type": "Boolean",
          "config": {
            "label": "Featured Testimonial",
            "placeholder_false": "false",
            "placeholder_true": "true",
            "default_value": false
          }
        }
      }
    }
  ]
}